<Context path="/LilleWebMarket" docBase="LilleWebMarket" debug="99">

	<!-- Definition du pool -->
	<Resource
		name="jdbc/base1"
		auth="Container"
		type="javax.sql.DataSource"
		maxActive="8"
		maxIdle="4"
		maxWait="10000"
		username="postgres"
		password="root"
		driverClassName="org.postgresql.Driver"
		url="jdbc:postgresql://localhost/da2i"
	/>
	
	<ResourceLink
		global="jdbc/base1"
		name="jdbc/base1"
		type="javax.sql.DataSource"
	/>
  

  
  
