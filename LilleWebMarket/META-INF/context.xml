<Context path="/LilleWebMarket" docBase="LilleWebMarket" debug="99" >

	<!-- Definition du pool -->
	<Resource
		name="jdbc/base1"
		auth="Container"
		type="javax.sql.DataSource"
		maxActive="8"
		maxIdle="4"
		maxWait="10000"
		username="clipetv"
		password="moi"
		driverClassName="org.postgresql.Driver"
		url="jdbc:postgresql://sqlserv:5432/da2i"
	/>



	<!-- Definition du Realm sans pool -->	
	<Realm 
		className="org.apache.catalina.realm.JDBCRealm"
		debug="99"
		driverName="org.postgresql.Driver"
		connectionURL="jdbc:postgresql://psqlserv/da2i"
		connectionName="clipetv"
		connectionPassword="moi"
		userTable="users"
		userNameCol="login"
		userCredCol="password"
		userRoleTable="users_roles"
		roleNameCol="role"
	/>
	


  <!-- Definition du Realm via le pool -->
	<!--
	<Realm
		className="org.apache.catalina.realm.DataSourceRealm"
		debug="99"
        dataSourceName="jdbc/base1"
		localDataSource="false"
        userTable="users"
		userNameCol="login"
		userCredCol="password"
        userRoleTable="users_roles"
		roleNameCol="role"
	/>
	-->



  <!-- Definition d'une valve d'acces -->
  <Valve
	className="org.apache.catalina.valves.AccessLogValve"
    prefix="lillewebmarket_access1."
	suffix=".txt"
    pattern="common"
  />
  
  
  
  <Parameter name="db_driver" value="org.postgresql.Driver" /> 
 
</Context>
